.ps-row.ps-padding-64#menu
  .ps-col.l6.ps-padding-large
    h1.ps-center Nuestro Menu
    br
    //- Trae el menu completo
    each plato in db_menu
      h4
        a(href="/producto/detalle/" + plato.id)= plato.name
      p.ps-text-grey= plato.description + ' U$S ' + plato.price.toFixed(2)

  .ps-col.l6.ps-padding-large.ps-img-menu
    img(
      src="/images/menu.jpg"
      class="ps-round ps-image ps-opacity-min"
      alt="Menu"
    )